<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        class="com.haulmont.cuba.gui.app.core.restore.EntityRestore"
        messagesPack="com.haulmont.cuba.gui.app.core.restore"
        caption="msg://entityRestore.caption"
        focusComponent="entities">

    <dialogMode height="theme://cuba.gui.dialogSize.height.large"
                width="theme://cuba.gui.dialogSize.width.large"
                resizable="true"/>

    <layout spacing="true" expand="tablePanel">
        <hbox spacing="true">
            <label value="msg://entityType" align="MIDDLE_LEFT"/>
            <lookupField id="entities" width="theme://cuba.gui.entity-restore.entities.width" required="true"/>
        </hbox>

        <vbox id="tablePanel" spacing="true">
        </vbox>
    </layout>
</window>