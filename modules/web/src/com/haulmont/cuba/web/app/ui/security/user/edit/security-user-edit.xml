<window
    resourceBundle="com.haulmont.cuba.web.app.ui.security.user.edit.security-user-edit"
    datasource="user"
    caption="Edit User '${item.name}'"
>
    <metadataContext>
        <deployViews name="/com/haulmont/cuba/web/app/ui/security/user/edit/security-user-edit.views.xml"/>
    </metadataContext>

    <dsContext>
        <datasource
            id="user"
            class="com.haulmont.cuba.security.entity.User"
            view="edit"
        />

        <collection-datasource
            id="groups"
            class="com.haulmont.cuba.security.entity.Group"
            view="lookup"
        >
            <query>select g from sec$Group g</query>
        </collection-datasource>
    </dsContext>

    <layout>
        <tabsheet>
            <tab id="general" caption="General">
                <grid>
                    <columns>
                        <column/>
                        <column/>
                    </columns>
                    <rows>
                        <row>
                            <label value="Name"/>
                            <text-field id="name" datasource="user" property="name"/>
                        </row>
                        <row>
                            <label value="Login"/>
                            <hbox>
                                <text-field id="login" datasource="user" property="login"/>
                                <button caption="Browse..."/>
                           </hbox>
                        </row>
                    </rows>
                </grid>
            </tab>
            <tab id="additional" caption="Additional">
                <lookup-field id="groups" lookupDatasource="groups"/>
            </tab>
        </tabsheet>
    </layout>
</window>
