<frame>
    <layout>
        <vbox id="filter-pane" width="100%">
            <group-box>
                <caption label="Filter"/>
                <hbox id="group-box">
                    <label control="name" value="Name:"/>
                    <text-field id="name" width="100%"/>
                </hbox>
            </group-box>
            <hbox align="end" width="500px">
                <button id="clear" caption="Clear"/>
                <button id="apply" caption="Apply"/>
            </hbox>
        </vbox>
    </layout>
</frame>