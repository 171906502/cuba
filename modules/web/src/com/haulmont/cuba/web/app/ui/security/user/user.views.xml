<views xmlns="http://www.haulmont.com/schema/cuba/view.xsd">

    <view entity="sec$User" name="user.edit">
        <property name="name"/>
        <property name="login"/>
        <property name="email"/>
        <property name="activeDirectoryUser"/>
        <property name="group">
            <property name="name"/>
        </property>
    </view>

    <view entity="sec$UserRole" name="user.edit">
        <property name="role">
            <property name="name"/>
        </property>
    </view>

    <view entity="sec$User" name="user.browse">
        <property name="name"/>
        <property name="login"/>
        <property name="email"/>
        <property name="activeDirectoryUser"/>
    </view>
</views>